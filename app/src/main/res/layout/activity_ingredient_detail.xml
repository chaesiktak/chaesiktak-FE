<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="28dp"
        android:paddingVertical="27dp"
        android:paddingTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="21dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/backarrow_logo" />

        <TextView
            android:id="@+id/ingredient_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:gravity="center"
            android:text="title"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/detail_imageView2"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:scaleType="centerCrop"
        android:src="@drawable/detail_sample"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:paddingHorizontal="30dp"
        android:paddingTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@id/detail_imageView2">
        <TextView
            android:text="기본재료"
            android:textColor="@color/black_replacement"
            android:textSize="16sp"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"
            tools:layout_editor_absoluteX="0dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredient_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>