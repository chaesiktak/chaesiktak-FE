<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 바 (뒤로가기, 검색창, 홈) -->
    <LinearLayout
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/backArrowIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow_logo"
            android:contentDescription="뒤로가기 버튼" />

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/search_input"
                android:textSize="16sp"
                android:layout_width="307dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/searchingbar"
                android:hint="검색어를 입력해주세요"
                android:paddingLeft="40dp"
                android:textColorHint="@color/banner_bottom_indicator_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/backArrowIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/search_go_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:src="@drawable/searching_icon" />
        </FrameLayout>
        <ImageView
            android:id="@+id/homeIcon"
            android:layout_weight="1"
            android:src="@drawable/home_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- 필터바 (총 00개) (필터) -->
    <LinearLayout
        android:id="@+id/filterbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <TextView
            android:id="@+id/recipeCountText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/abeezee_regular"
            android:text="총 00개"
            android:textColor="@color/filter_unclicked"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ingredient_filter"
            android:src="@drawable/ingredient_filter_selector"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/filter_text"
                android:src="@drawable/filter_text_selector"
                android:layout_width="60dp"
                android:layout_height="30dp"/>
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searching_content_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/filterbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
