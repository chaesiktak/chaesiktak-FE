<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FindingPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_marginTop="229dp"
            android:text="비밀번호 찾기"
            android:textSize="24sp"
            android:layout_marginStart="46dp"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="30dp"
            android:text="이름"
            android:textSize="16sp"
            android:layout_marginStart="46dp"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/name_input"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:hint="이름을 입력하세요"
            android:background="@drawable/default_edit_text"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="text" />
        <TextView
            android:layout_marginTop="18dp"
            android:textSize="16sp"
            android:text="이메일"
            android:layout_marginStart="46dp"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/emailname_input"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:hint="이메일을 입력해 주세요"
            android:background="@drawable/default_edit_text"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="text" />

        <android.widget.Button
            android:id="@+id/finding_password_button"
            android:layout_width="309dp"
            android:layout_height="61dp"
            android:layout_marginTop="57dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"
            android:text="비밀번호 찾기"
            android:textSize="25sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/white"
            android:background="@drawable/default_button_lg"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>