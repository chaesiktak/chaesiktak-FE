<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/banner1_background">

    <!-- 텍스트를 감싸는 세로형 LinearLayout -->
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 첫 번째 텍스트 -->
        <TextView
            android:id="@+id/bannerText"
            android:layout_width="220dp"
            android:layout_height="25dp"
            android:fontFamily="@font/ibm_plex_sans_kr_regular"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!-- 두 번째 텍스트 -->
        <TextView
            android:id="@+id/bannerSubtitle"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 이미지 -->
    <ImageView
        android:layout_weight="1"
        android:id="@+id/bannerImage"
        android:layout_width="50dp"
        android:layout_height="61dp"

        android:src="@drawable/banner_icon" />

</LinearLayout>
