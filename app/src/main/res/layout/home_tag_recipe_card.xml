<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:padding="6.5dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="7dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp"
        >

        <!-- ImageView에 둥근 배경 적용 -->
        <ImageView
            android:layout_marginEnd="10dp"
            android:clipToOutline="true"
            android:id="@+id/tag_recipe_card_img"
            android:scaleType="centerCrop"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/placeholder_image"
            android:background="@drawable/rounded_image"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:id="@+id/tag_recipe_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ibm_plex_sans_kr_bold"
                android:text="recipe title"
                android:textColor="@color/black_replacement"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tag_recipe_card_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ibm_plex_sans_kr_regular"
                android:text="subtitle"
                android:textColor="@color/card_subtext"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_marginVertical="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">

                <android.widget.TextView
                    android:id="@+id/tag_recipe_card_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibm_plex_sans_kr_bold"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:stateListAnimator="@null"
                    android:text="tag"
                    android:textColor="@color/black_replacement"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">


        </androidx.cardview.widget.CardView>




    </LinearLayout>

</androidx.cardview.widget.CardView>
