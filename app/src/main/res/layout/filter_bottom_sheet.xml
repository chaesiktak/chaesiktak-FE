<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="768dp"
    android:background="@drawable/bg_bottom_sheet">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:gravity="center"
            android:text="필터"
            android:textColor="@color/black_replacement"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_weight="1"
            android:src="@drawable/filter_close" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <TextView
            android:textColor="@color/black_replacement"
            android:fontFamily="@font/ibm_plex_sans_kr_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 채식지향" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:ignore="MissingConstraints">

        <!-- 첫 번째 줄 -->
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_vegan"
                android:button="@null"
                android:textAlignment="center"
                android:layout_marginHorizontal="6dp"
                android:text="비건"
                android:background="@drawable/filter_tag_selector"
                android:layout_width="80dp"
                android:layout_height="37dp"/>

            <RadioButton
                android:id="@+id/radio_lacto"
                android:button="@null"
                android:textAlignment="center"
                android:layout_marginHorizontal="6dp"
                android:text="락토"
                android:background="@drawable/filter_tag_selector"
                android:layout_width="80dp"
                android:layout_height="37dp"/>

            <RadioButton
                android:id="@+id/radio_ovo"
                android:button="@null"
                android:textAlignment="center"
                android:layout_marginHorizontal="6dp"
                android:text="오보"
                android:background="@drawable/filter_tag_selector"
                android:layout_width="80dp"
                android:layout_height="37dp"/>

            <RadioButton
                android:id="@+id/radio_lacto_ovo"
                android:button="@null"
                android:textAlignment="center"
                android:layout_marginHorizontal="6dp"
                android:text="락토오보"
                android:background="@drawable/filter_tag_selector"
                android:layout_width="80dp"
                android:layout_height="37dp"/>
        </LinearLayout>

        <!-- 두 번째 줄 -->
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_pesco"
                android:button="@null"
                android:textAlignment="center"
                android:layout_marginHorizontal="6dp"
                android:text="페스코"
                android:background="@drawable/filter_tag_selector"
                android:layout_width="80dp"
                android:layout_height="37dp"/>

            <RadioButton
                android:paddingHorizontal="25dp"
                android:id="@+id/radio_flexitarian"
                android:button="@null"
                android:textAlignment="center"
                android:layout_marginHorizontal="6dp"
                android:text="플렉시 테리언"
                android:background="@drawable/filter_tag_selector"
                android:layout_width="wrap_content"
                android:layout_height="37dp"/>
        </LinearLayout>

    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/radio_group"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:src="@drawable/plus"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_kr_medium"
                android:text="선호 재료 추가"
                android:textColor="@color/black_replacement" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="6dp">

                <!-- RadioButton -->
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rd_filter_ingredient"
                    android:button="@null" />

                <!-- 설명 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEXT"
                    android:textSize="14sp"
                    android:textColor="@color/black_replacement"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="6dp">

                <!-- RadioButton -->
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rd_filter_ingredient"
                    android:button="@null" />

                <!-- 설명 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEXT"
                    android:textSize="14sp"
                    android:textColor="@color/black_replacement"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="6dp">

                <!-- RadioButton -->
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rd_filter_ingredient"
                    android:button="@null" />

                <!-- 설명 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEXT"
                    android:textSize="14sp"
                    android:textColor="@color/black_replacement"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="6dp">

                <!-- RadioButton -->
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rd_filter_ingredient"
                    android:button="@null" />

                <!-- 설명 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEXT"
                    android:textSize="14sp"
                    android:textColor="@color/black_replacement"/>
            </LinearLayout>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:src="@drawable/minus_fill"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_kr_medium"
                android:text="비선호 재료 제외"
                android:textColor="@color/black_replacement" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="6dp">

                <!-- RadioButton -->
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rd_filter_ingredient"
                    android:button="@null" />

                <!-- 설명 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEXT"
                    android:textSize="14sp"
                    android:textColor="@color/black_replacement"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="6dp">

                <!-- RadioButton -->
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rd_filter_ingredient"
                    android:button="@null" />

                <!-- 설명 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEXT"
                    android:textSize="14sp"
                    android:textColor="@color/black_replacement"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="6dp">

                <!-- RadioButton -->
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rd_filter_ingredient"
                    android:button="@null" />

                <!-- 설명 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEXT"
                    android:textSize="14sp"
                    android:textColor="@color/black_replacement"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="6dp">

                <!-- RadioButton -->
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rd_filter_ingredient"
                    android:button="@null" />

                <!-- 설명 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEXT"
                    android:textSize="14sp"
                    android:textColor="@color/black_replacement"/>
            </LinearLayout>

        </RadioGroup>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>