<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--필터 타이틀 및 닫기 레이아웃-->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:elevation="3dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:gravity="center"
            android:text="나의 타입 선택"
            android:textColor="@color/black_replacement"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/filter_close"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_weight="1"
            android:src="@drawable/filter_close" />
    </LinearLayout>

    <!--나의 채식지향 타이틀 레이아웃-->


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">
        <TextView
            android:textColor="@color/black_replacement"
            android:fontFamily="@font/ibm_plex_sans_kr_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 채식지향" />
    </LinearLayout>

        <!-- 첫 번째 줄 -->
    <LinearLayout
        android:gravity="start"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <RadioGroup
            android:id="@+id/first_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:paddingHorizontal="20dp"
            android:id="@+id/radio_vegan"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:button="@null"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/filter_tag_selector"
            android:text="VEGAN"
            android:textAlignment="center"
            android:textColor="@drawable/filter_text_color" />

        <RadioButton
            android:paddingHorizontal="20dp"
            android:id="@+id/radio_lacto"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/filter_tag_selector"
            android:button="@null"
            android:text="LACTO"
            android:textAlignment="center"
            android:textColor="@drawable/filter_text_color" />

            <RadioButton
                android:id="@+id/radio_pesco"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:paddingHorizontal="20dp"
                android:text="PESCO"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />

        </RadioGroup>
    </LinearLayout>
        <!-- 두 번째 줄 -->

    <LinearLayout
        android:paddingHorizontal="20dp"
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        >

        <RadioGroup
            android:id="@+id/second_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




            <RadioButton
                android:id="@+id/radio_flexitarian"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:paddingHorizontal="20dp"
                android:text="FLEXITARIAN"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />

            <RadioButton
                android:paddingHorizontal="20dp"
                android:id="@+id/radio_ovo"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:text="OVO"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />

            <RadioButton
                android:paddingHorizontal="20dp"
                android:id="@+id/radio_lacto_ovo"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:text="LACTO_OVO"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/view0"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#FAFAFA"
        />



    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/filter_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="선택초기화"
                android:textAlignment="center"
                android:textColor="@color/banner_bottom_indicator_grey"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/go_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/default_button_md"
                android:text="적용하기"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>