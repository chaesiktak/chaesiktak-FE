<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:gravity="center"
            android:text="필터"
            android:textColor="@color/black_replacement"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_weight="1"
            android:src="@drawable/filter_close" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <TextView
            android:textColor="@color/black_replacement"
            android:fontFamily="@font/ibm_plex_sans_kr_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 채식지향" />
    </LinearLayout>

        <!-- 첫 번째 줄 -->
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <RadioGroup
            android:id="@+id/first_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_vegan"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:button="@null"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/filter_tag_selector"
            android:text="비건"
            android:textAlignment="center"
            android:textColor="@drawable/filter_text_color" />

        <RadioButton
            android:id="@+id/radio_lacto"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/filter_tag_selector"
            android:button="@null"
            android:text="락토"
            android:textAlignment="center"
            android:textColor="@drawable/filter_text_color" />

        <RadioButton
            android:id="@+id/radio_ovo"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/filter_tag_selector"
            android:button="@null"
            android:text="오보"
            android:textAlignment="center"
            android:textColor="@drawable/filter_text_color" />

        <RadioButton
            android:id="@+id/radio_lacto_ovo"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/filter_tag_selector"
            android:button="@null"
            android:text="락토오보"
            android:textAlignment="center"
            android:textColor="@drawable/filter_text_color" />
        </RadioGroup>
    </LinearLayout>

        <!-- 두 번째 줄 -->
    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <RadioGroup
            android:id="@+id/second_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_pesco"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/filter_tag_selector"
            android:button="@null"
            android:text="페스코"
            android:textAlignment="center"
            android:textColor="@drawable/filter_text_color" />

        <RadioButton
            android:id="@+id/radio_flexitarian"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/filter_tag_selector"
            android:button="@null"
            android:paddingHorizontal="25dp"
            android:text="플렉시 테리언"
            android:textAlignment="center"
            android:textColor="@drawable/filter_text_color" />
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="선택초기화"
                android:textAlignment="center"
                android:textColor="@color/banner_bottom_indicator_grey"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/default_button_md"
                android:text="적용하기"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>