<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--필터 타이틀 및 닫기 레이아웃-->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:elevation="3dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:gravity="center"
            android:text="필터"
            android:textColor="@color/black_replacement"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/filter_close"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_weight="1"
            android:src="@drawable/filter_close" />
    </LinearLayout>

    <!--나의 채식지향 타이틀 레이아웃-->


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">
        <TextView
            android:textColor="@color/black_replacement"
            android:fontFamily="@font/ibm_plex_sans_kr_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 채식지향" />
    </LinearLayout>

        <!-- 첫 번째 줄 -->
    <LinearLayout
        android:gravity="start"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <RadioGroup
            android:id="@+id/first_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:paddingHorizontal="20dp"
            android:id="@+id/radio_vegan"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:button="@null"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/filter_tag_selector"
            android:text="VEGAN"
            android:textAlignment="center"
            android:textColor="@drawable/filter_text_color" />

        <RadioButton
            android:paddingHorizontal="20dp"
            android:id="@+id/radio_lacto"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/filter_tag_selector"
            android:button="@null"
            android:text="LACTO"
            android:textAlignment="center"
            android:textColor="@drawable/filter_text_color" />

            <RadioButton
                android:id="@+id/radio_pesco"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:paddingHorizontal="20dp"
                android:text="PESCO"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />

        </RadioGroup>
    </LinearLayout>
        <!-- 두 번째 줄 -->

    <LinearLayout
        android:paddingHorizontal="20dp"
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        >

        <RadioGroup
            android:id="@+id/second_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




            <RadioButton
                android:id="@+id/radio_flexitarian"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:paddingHorizontal="20dp"
                android:text="FLEXITARIAN"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />

            <RadioButton
                android:paddingHorizontal="20dp"
                android:id="@+id/radio_ovo"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:text="OVO"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />

            <RadioButton
                android:paddingHorizontal="20dp"
                android:id="@+id/radio_lacto_ovo"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:text="LACTO_OVO"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/view0"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#FAFAFA"
        />

    <LinearLayout
        android:paddingVertical="10dp"
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/view0"
        tools:layout_editor_absoluteX="0dp">

        <!--선호 재료 추가 타이틀 horizontal 레이아웃-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/thumbs_up" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibm_plex_sans_kr_medium"
                    android:text="선호 재료 추가"
                    android:textColor="@color/black_replacement" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:paddingStart="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.widget.CheckBox
                android:id="@+id/checkboxSpinach"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/add_checkbox"
                android:button="@android:color/transparent" />
            <TextView
                android:text="시금치"
                android:layout_marginStart="7dp"
                android:textSize="14sp"
                android:fontFamily="@font/ibm_plex_sans_kr_regular"
                android:textColor="@color/black_replacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.widget.CheckBox
                android:id="@+id/checkboxCabbage"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/add_checkbox"
                android:button="@android:color/transparent" />
            <TextView
                android:text="배추"
                android:layout_marginStart="7dp"
                android:textSize="14sp"
                android:fontFamily="@font/ibm_plex_sans_kr_regular"
                android:textColor="@color/black_replacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.widget.CheckBox
                android:id="@+id/checkboxPotato"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/add_checkbox"
                android:button="@android:color/transparent" />
            <TextView
                android:text="감자"
                android:layout_marginStart="7dp"
                android:textSize="14sp"
                android:fontFamily="@font/ibm_plex_sans_kr_regular"
                android:textColor="@color/black_replacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.widget.CheckBox
                android:id="@+id/checkboxEggplant"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/add_checkbox"
                android:button="@android:color/transparent" />
            <TextView
                android:layout_marginStart="7dp"
                android:text="가지"
                android:textSize="14sp"
                android:fontFamily="@font/ibm_plex_sans_kr_regular"
                android:textColor="@color/black_replacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#FAFAFA"
        />
    <LinearLayout
        android:paddingVertical="10dp"
        android:id="@+id/linearlayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        tools:layout_editor_absoluteX="0dp">

        <!--비선호 재료 제외 타이틀 horizontal 레이아웃-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/thumbs_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_kr_medium"
                android:text="비선호 재료 제외"
                android:textColor="@color/black_replacement" />


        </LinearLayout>


    <LinearLayout
        android:paddingStart="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.CheckBox
                android:id="@+id/checkboxCoriander"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/subtract_checkbox"
                android:button="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/ibm_plex_sans_kr_regular"
                android:text="고수"
                android:textColor="@color/black_replacement"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.CheckBox
                android:id="@+id/checkboxGinger"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/subtract_checkbox"
                android:button="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/ibm_plex_sans_kr_regular"
                android:text="생강"
                android:textColor="@color/black_replacement"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.CheckBox
                android:id="@+id/checkboxCucumber"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/subtract_checkbox"
                android:button="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/ibm_plex_sans_kr_regular"
                android:text="오이"
                android:textColor="@color/black_replacement"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.CheckBox
                android:id="@+id/checkboxCelery"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/subtract_checkbox"
                android:button="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/ibm_plex_sans_kr_regular"
                android:text="샐러리"
                android:textColor="@color/black_replacement"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/linearlayout6"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/filter_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="선택초기화"
                android:textAlignment="center"
                android:textColor="@color/banner_bottom_indicator_grey"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/go_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/default_button_md"
                android:text="적용하기"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>