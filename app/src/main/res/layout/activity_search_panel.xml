<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_panel_color"
    tools:context=".activities.SearchPanelActivity">

    <!-- 상단 바 (뒤로가기, 검색창, 홈) -->
    <LinearLayout
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/backArrowIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow_logo"
            android:contentDescription="뒤로가기 버튼" />

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_input"
            android:textSize="16sp"
            android:layout_width="307dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/searchingbar"
            android:hint="검색어를 입력해주세요"
            android:paddingLeft="40dp"
            android:textColorHint="@color/banner_bottom_indicator_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/backArrowIcon"
            app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/search_go_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:src="@drawable/searching_icon" />
        </FrameLayout>
        <ImageView
            android:id="@+id/homeIcon"
            android:layout_weight="1"
            android:src="@drawable/home_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bar">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추천 재료 검색"
            android:fontFamily="@font/ibm_plex_sans_kr_medium"
            android:textColor="@color/black_replacement"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <RadioGroup
            android:id="@+id/ingredient_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_marginEnd="6dp"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:paddingHorizontal="20dp"
                android:text="두부"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:paddingHorizontal="20dp"
                android:text="토마토"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />
            <RadioButton
                android:layout_marginEnd="6dp"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@drawable/filter_tag_selector"
                android:button="@null"
                android:paddingHorizontal="20dp"
                android:text="양파"
                android:textAlignment="center"
                android:textColor="@drawable/filter_text_color" />
        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
