<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- 제목 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:text="비밀번호 재설정하기"
            android:textSize="24sp" />

        <!-- 설명 -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:fontFamily="@font/abeezee_regular"
            android:text="새로운 비밀번호를 입력해주세요"
            android:textSize="14sp" />

        <!-- 기존 비밀번호 레이블 -->
        <TextView
            android:id="@+id/currentPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/abeezee_regular"
            android:text="기존 비밀번호"
            android:textSize="16sp" />

        <!-- 기존 비밀번호 입력 -->
        <EditText
            android:id="@+id/currentPasswordInput"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/default_edit_text"
            android:hint="기존 비밀번호 입력"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- 신규 비밀번호 레이블 -->
        <TextView
            android:id="@+id/newPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/abeezee_regular"
            android:text="신규 비밀번호"
            android:textSize="16sp" />

        <!-- 신규 비밀번호 입력 -->
        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/default_edit_text"
            android:hint="신규 비밀번호 입력"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- 비밀번호 확인 입력 -->
        <EditText
            android:id="@+id/confirmPasswordInput"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/default_edit_text"
            android:hint="비밀번호 재확인"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- 재설정하기 버튼 -->
        <android.widget.Button
            android:id="@+id/finding_password_button"
            android:layout_width="309dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/default_button_lg"
            android:fontFamily="@font/inter_bold"
            android:text="재설정하기"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <android.widget.Button
            android:id="@+id/cancelButton"
            android:layout_width="319dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:text="취소"
            android:textSize="25sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/white"
            android:background="@drawable/button_cancellation"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>